<UserControl x:Class="Academix.Views.ClassesSystemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academix.Views"
             mc:Ignorable="d" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             d:DesignWidth="680" Height="470">
    <UserControl.Resources>
        <Style TargetType="{x:Type TreeViewItem}">
            <Setter Property="FontSize"
        Value="20"/>
            <Setter Property="FontWeight"
        Value="Bold"/>
            <Setter Property="Foreground"
        Value="{StaticResource DeepBlueForeground}"/>
            <Setter Property="Margin"
        Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <StackPanel>
            <Grid>
                <StackPanel 
                    Orientation="Horizontal"
                    FlowDirection="RightToLeft"
                    HorizontalAlignment="Right">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DeepBlueButton}">
                            <Setter Property="Margin"
                                Value="5,0,5,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock><Run Text="Lưu"/></TextBlock>
                            <iconPacks:PackIconMaterial
                                Height="15"
                                Width="15"
                                Kind="ContentSave"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock><Run Text="Khôi phục"/></TextBlock>
                            <iconPacks:PackIconMaterial
                                Height="15"
                                Width="15"
                                Kind="Restore"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <Border BorderBrush="Black"
                BorderThickness="1"
                Background="White"
                Margin="0,20,0,0">
                <TreeView
                    Margin="20"
                    Background="Transparent">
                    
                    <TreeViewItem Header="Khối 10">
                        <TreeViewItem Header="Lớp 10a1"/>
                        <TreeViewItem Header="Lớp 10a2"/>
                        <TreeViewItem Header="Lớp 10a3"/>
                        <TreeViewItem Header="Lớp 10a4"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Khối 11">
                        <TreeViewItem Header="Lớp 11a1"/>
                        <TreeViewItem Header="Lớp 11a2"/>
                        <TreeViewItem Header="Lớp 11a3"/>
                    </TreeViewItem>
                    <TreeViewItem Header="Khối 12">
                        <TreeViewItem Header="Lớp 12a1"/>
                        <TreeViewItem Header="Lớp 12a2"/>
                    </TreeViewItem>
                </TreeView>
            </Border>
        </StackPanel>

    </ScrollViewer>
</UserControl>
