<UserControl x:Class="Academix.Views.GradeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:Academix.Views"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1340">

    <UserControl.Resources>


    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <Border x:Name="RoundBorder" DockPanel.Dock="Top"
        HorizontalAlignment="Left"
        ClipToBounds="True"
                Background="{StaticResource DeepBlueBackground}"
            Margin="0,0,0,20">
            <Border.OpacityMask>
                <VisualBrush Stretch="None">
                    <VisualBrush.Visual>
                        <Border Background="White"  Height="{Binding ActualHeight, ElementName=RoundBorder}"  Width="{Binding ActualWidth, ElementName=RoundBorder}" CornerRadius="8"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.OpacityMask>
            <ListView  ItemsSource="{Binding SemesterList}"
                       SelectedItem="{Binding SelectedSemester, Mode=TwoWay}"
                       Background="Transparent"
                       ScrollViewer.HorizontalScrollBarVisibility="Auto"
                       SelectionMode="Single">

                <ListView.Resources>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ListViewItem}">
                                    <RadioButton 
                                Style="{StaticResource DeepBlueRadioButton}" 
                                Content="{TemplateBinding Content}" 
                                IsChecked="{Binding IsSelected, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" 
                            />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.Resources>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>

            </ListView>
        </Border>
        <TextBlock DockPanel.Dock="Top"
            FontSize="20"
            Foreground="{StaticResource GrayForeground}"
            FlowDirection="LeftToRight"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            Margin="20,0,0,10"><Run Text="Danh sách môn học"/></TextBlock>

        <ListView ItemsSource="{Binding SubjectList}"
                  SelectedItem="{Binding SelectedSubject, Mode=TwoWay}"
                  DockPanel.Dock="Top" 
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          Background="{StaticResource DeepBlueBackground}"
          SelectionMode="Single"
                  Margin="0,0,0,20">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <RadioButton 
                            Style="{StaticResource DeepBlueRadioButton}" 
                            Content="{TemplateBinding Content}" 
                            IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}, Mode=TwoWay}" 
                            />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Margin" Value="20,0,0,0"/>
                </Style>
            </ListView.Resources>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>


        </ListView>
        <Grid DockPanel.Dock="Top"
              Margin="0,0,0,20">
            <StackPanel
                    Orientation="Horizontal"
                    FlowDirection="RightToLeft"
                    HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DeepBlueButton}">
                        <Setter Property="Margin"
            Value="5,0,5,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding SaveChangesCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Lưu</TextBlock>
                        <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="ContentSave"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0">

                        </iconPacks:PackIconMaterial>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock><Run Text="Xóa"/></TextBlock>
                        <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="CloseCircle"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock><Run Text="Nhập/xuất"/></TextBlock>
                        <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="SwapVerticalBold"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>

            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal"
                    FlowDirection="RightToLeft"
                            Margin="20,0,0,0">
                    <ComboBox                     
                        ItemsSource="{Binding GradeList}"
                        SelectedItem="{Binding SelectedGrade, Mode=TwoWay}"
                        Height="30"
                        Width="120"
                        FlowDirection="LeftToRight"
                        VerticalAlignment="Center" 
                        Margin="10,0,0,0">
                    </ComboBox>
                    <TextBlock FontSize="20"
                        Height="30"
                        Foreground="{StaticResource GrayForeground}"
                        FlowDirection="LeftToRight"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"><Run Text="Khối"/></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                    FlowDirection="RightToLeft"
                            Margin="20,0,0,0">
                    <ComboBox                    
                        ItemsSource="{Binding FilteredClassList}"
                        SelectedItem="{Binding SelectedClass, Mode=TwoWay}"
                        Height="30"
                        Width="120"
                        FlowDirection="LeftToRight"
                        VerticalAlignment="Center" 
                        Margin="10,0,0,0"/>
                    <TextBlock FontSize="20"
                        Height="30"
                        Foreground="{StaticResource GrayForeground}"
                        FlowDirection="LeftToRight"
                        FontWeight="Bold"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"><Run Text="Lớp"/></TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                    FlowDirection="RightToLeft"/>

            </StackPanel>

        </Grid>

        <Grid DockPanel.Dock="Top"
       Margin="0,0,0,20">
            <StackPanel
             Orientation="Horizontal"
             FlowDirection="RightToLeft"
             HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DeepBlueButton}">
                        <Setter Property="Margin"
     Value="5,0,5,0"/>
                    </Style>
                </StackPanel.Resources>

            </StackPanel>
            <StackPanel Orientation="Horizontal"
                 HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal"
             FlowDirection="RightToLeft"
                     Margin="20,0,0,0">
                    <ComboBox 
                        ItemsSource="{Binding LoaiDiemList}"
                        SelectedItem="{Binding SelectedLoaiDiem, Mode=TwoWay}"
                        Height="30"
                         Width="120"
                         FlowDirection="LeftToRight"
                         VerticalAlignment="Center" 
                         Margin="10,0,0,0"/>
                    <TextBlock FontSize="20"
                 Height="30"
                 Foreground="{StaticResource GrayForeground}"
                 FlowDirection="LeftToRight"
                 FontWeight="Bold"
                 VerticalAlignment="Center"
                 Margin="10,0,0,0" Text="Loại điểm"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
             FlowDirection="RightToLeft">
                    <Controls:NumericUpDown 
                        Height="30"
                        Value="{Binding NumberOfScoreColumns}"
                        IsEnabled="{Binding IsNumericUpDownEnabled}"
                 Width="120"
                 FlowDirection="LeftToRight"
                 VerticalAlignment="Center" 
                 Margin="10,0,0,0"
                 FontSize="15"
                      FontWeight="Bold"
                    HorizontalContentAlignment="Center"/>
                    <TextBlock FontSize="20"
                 Height="30"
                 Foreground="{StaticResource GrayForeground}"
                 FlowDirection="LeftToRight"
                 FontWeight="Bold"
                 VerticalAlignment="Center"
                 Margin="10,0,0,0" Text="Số lần"/>
                </StackPanel>

            </StackPanel>

        </Grid>
        <DataGrid x:Name="dataGrid" 
                      SnapsToDevicePixels="True"
                      UseLayoutRounding="True"
                      ItemsSource="{Binding FilteredStudents}"
                      AutoGenerateColumns="False"
                        HorizontalAlignment="Center"
          ColumnHeaderHeight="50" ScrollViewer.HorizontalScrollBarVisibility="Auto" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      EnableColumnVirtualization="True"
                      EnableRowVirtualization="True" CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False"
                      >
            <DataGrid.Resources>

                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Foreground"
                            Value="White"/>
                    <Setter Property="FontWeight"
                            Value="Bold"/>
                    <Setter Property="FontSize"
                            Value="15"/>
                    <Setter Property="TextAlignment"
                            Value="Center"/>
                </Style>
                <!--<Style TargetType="DataGridColumnHeadersPresenter">
                        <Setter Property="Height" Value="60"/>
                    </Style>-->
            </DataGrid.Resources>

            <DataGrid.Columns>

                <DataGridTextColumn Width="100"
                                    Binding="{Binding Index}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.Header>
                        <TextBlock Text="STT"
                                   FontSize="16"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                </DataGridTextColumn>
                <DataGridTextColumn Width="250"
                                    Binding="{Binding ID}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Mã học sinh"
                                   FontSize="16"/>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Setter Property="TextAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Width="350"
                                    Binding="{Binding Name}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.Header>
                        <TextBlock Text="Họ và tên"
                                   FontSize="16"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Điểm" Width="Auto">
                    <DataGridTemplateColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource LightBlueHeader}">
                            <Setter Property="FontSize" Value="16"/>
                        </Style>

                    </DataGridTemplateColumn.HeaderStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding Scores}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding ., Mode=TwoWay, UpdateSourceTrigger=LostFocus}"  
                                 Width="50"
                                 TextAlignment="Center"
                                 Margin="2"
                                 VerticalContentAlignment="Center"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>



            </DataGrid.Columns>


        </DataGrid>



    </DockPanel>
</UserControl>
