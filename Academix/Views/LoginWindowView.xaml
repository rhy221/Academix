<Window x:Class="Academix.Views.LoginWindowView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Academix"
        xmlns:views="clr-namespace:Academix.Views"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Height="330" Width="300"
        Title="Academix"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        Icon="/Assets/AcademixIcon.png">

   
        <StackPanel Width="300" Height="320">
            <Image Source="/Assets/AcademixLogo.png" 
                   Height="36" 
                   Width="195" Margin="0,15,0,0"/>
            <Label 
               Content="HỆ THỐNG QUẢN LÝ HỌC SINH"
               FontSize="15"
               Foreground="#FF0B3948"
                HorizontalAlignment="Center" 
                Margin="0,2,0,4" 
                FontWeight="Bold"/>

            <Label Content="Đăng nhập"
                    FontSize="25"
                    Foreground="#FF0B3948"
                    HorizontalAlignment="Center" Margin="0,10,0,4"/>



            <StackPanel Margin="0,0,0,8"
                        Orientation="Horizontal">

                <iconPacks:PackIconMaterial Kind="AccountCircle" 
                                    Height="22" 
                                    Width="22"
                                    Foreground="#FFD0CDD7"
                                     VerticalAlignment="Center"
                                        Margin="9,5,5,5"/>
                <TextBox
                 Height="28"
                 Width="238"
                 Background="#FFD0CDD7"
                 controls:TextBoxHelper.Watermark="Tên đăng nhập"
                 controls:TextBoxHelper.WatermarkAlignment="Left"
                 HorizontalContentAlignment="Stretch"
                 VerticalAlignment="Center"
                 Margin="5,5,0,5" />
            </StackPanel>
            <StackPanel  Margin="0,0,0,8"
                         Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="Lock" 
                Height="22" 
                Width="22"
                Foreground="#FFD0CDD7"
                VerticalAlignment="Center"
                Margin="9,5,5,5"/>
                <PasswordBox
                Height="28"
                Width="238"
                Background="#FFD0CDD7"
                controls:TextBoxHelper.Watermark="Mật khẩu"
                controls:TextBoxHelper.WatermarkAlignment="Left"
                HorizontalContentAlignment="Stretch"
                VerticalAlignment="Center"
                Margin="5,5,0,5" />
            </StackPanel>

            <Button Content="Đăng nhập" 
                Height="28" 
                Background="#FF0B3948"
                Foreground="#FFD9DBF1"
                Width="138"
                HorizontalAlignment="Right" Margin="0,17,22,0"
                />
        </StackPanel>


</Window>
