    Margin="10,0,0,0"/>
                <TextBlock FontSize="20"
    Height="30"
    Foreground="{StaticResource GrayForeground}"
    FlowDirection="LeftToRight"
    FontWeight="Bold"
    VerticalAlignment="Center"
    Margin="10,0,0,0"><Run Text="Khối"/></TextBlock>
            </StackPanel>-->
