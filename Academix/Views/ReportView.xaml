<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academix.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="Academix.Views.ReportView"
             mc:Ignorable="d" 
              d:DesignHeight="720" d:DesignWidth="1340">
    <UserControl.Resources>
        <Style TargetType="Expander"
               BasedOn="{StaticResource LightBlueExpander}"/>
        <Style TargetType="GridViewColumnHeader"
        BasedOn="{StaticResource LightBlueGridViewColumnHeaderStyle}"/>


        <Style TargetType="Button"
        BasedOn="{StaticResource DeepBlueButton}">
            <Setter Property="Margin"
         Value="20,10,0,10"/>
        </Style>
        <Style x:Key="SearchInfoStack" TargetType="StackPanel">
            <Setter Property="FlowDirection"
             Value="RightToLeft"/>
            <Setter Property="Orientation"
             Value="Horizontal"/>
            <Setter Property="Margin"
             Value="0,10,0,10"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Template" 
             Value="{StaticResource ComboBoxControlTemplate}"/>
        </Style>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <ListView Margin="0,0,20,0"
                  VerticalAlignment="Top"
                  Background="{StaticResource DeepBlueBackground}"
                  BorderThickness="0,1,0,0"
                 >
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                
                    <Setter Property="FontSize"
                            Value="15"/>
                    <Setter Property="Foreground"
                            Value="White"/>
                    <Setter Property="FontWeight"
                            Value="Bold"/>
                    <Setter Property="Padding"
                            Value="10,5,80,5"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="{StaticResource DarkBlueBackground}"/>
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="{StaticResource DarkBlueBackground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.Resources>
            <ListViewItem Content="Báo cáo tổng kết môn"/>
            <ListViewItem Content="Báo cáo tổng kết học kỳ"/>
        </ListView>
        <Expander 
            DockPanel.Dock="Top"
            FlowDirection="RightToLeft" 
            Margin="0,0,0,20">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight"
                        Height="30">
                        <iconPacks:PackIconMaterial Height="20"
                            Width="20"
                            Kind="FileSearch"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Margin="10,0,0,0"/>
                        <TextBlock Height="Auto"
                            Width="Auto"
                            FontSize="20"
                                   Foreground="White"
                                   FontWeight="Bold"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"><Run Text="Thông tin tìm kiếm"/></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <StackPanel>
                <UniformGrid Background="White"
                             Columns="2"
                             FlowDirection="LeftToRight">
                    <UniformGrid.Resources>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Width"
                                Value="200"/>
                            <Setter Property="Height" 
                                Value="35"/>
                            <Setter Property="FontSize"
                                Value="25"/>
                            <Setter Property="Foreground"
                                Value="Black"/>
                            <Setter Property="Background"
                                Value="White"/>
                            <Setter Property="BorderBrush"
                                Value="{StaticResource GrayBorder}"/>
                            <Setter Property="BorderThickness"
                                Value="2"/>
                        </Style>

                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="FontSize"
                                Value="20"/>
                            <Setter Property="Foreground"
                                Value="#FF615F5F"/>
                            <Setter Property="VerticalAlignment"
                                Value="Center"/>
                            <Setter Property="Margin"
                                Value="20,0,0,0"/>
                        </Style>

                        <Style TargetType="{x:Type ComboBox}">
                            <Setter Property="Template"
                                Value="{StaticResource ComboBoxControlTemplate}"/>
                            <Setter Property="Height"
                                Value="35"/>
                            <Setter Property="Width"
                                Value="250"/>
                            <Setter Property="FlowDirection"
                                Value="LeftToRight"/>
                            <Setter Property="BorderThickness"
                                Value="2"/>
                        </Style>
                    </UniformGrid.Resources>

                    <StackPanel
                        Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type StackPanel}"
                                BasedOn="{StaticResource SearchInfoStack}"/>
                        </StackPanel.Resources>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Năm học"/></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type StackPanel}"
                                BasedOn="{StaticResource SearchInfoStack}"/>
                        </StackPanel.Resources>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Học kỳ"/></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type StackPanel}"
                                BasedOn="{StaticResource SearchInfoStack}"/>
                        </StackPanel.Resources>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Môn học"/></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </UniformGrid>
                <Border Background="White"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#FF615F5F">
                    <StackPanel Orientation="Horizontal"
                        FlowDirection="RightToLeft">

                        <Button>
                            <StackPanel Orientation="Horizontal"
                                FlowDirection="LeftToRight">
                                <iconPacks:PackIconMaterial
                                    Kind="FilePdfBox"
                                    Foreground="White"
                                    Height="15"
                                    Width="15"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center"><Run Text="Xuất PDF"/></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button>
                            <StackPanel Orientation="Horizontal"
                                FlowDirection="LeftToRight">
                                <iconPacks:PackIconMaterial
                                    Kind="FileExcel"
                                    Foreground="White"
                                    Height="15"
                                    Width="15"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center"><Run Text="Xuất Excel"/></TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Expander>
        <Grid DockPanel.Dock="Top"
              Background="{StaticResource LightBlueBackground}">
            <TextBlock FontSize="20"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="20,10,0,10">Mẫu báo cáo</TextBlock>
        </Grid>
        <Grid Background="BlueViolet"></Grid>
    </DockPanel>
</UserControl>
