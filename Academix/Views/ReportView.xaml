            <Setter Property="Orientation"
             Value="Horizontal"/>
            <Setter Property="Margin"
             Value="0,10,0,10"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Template" 
             Value="{StaticResource ComboBoxControlTemplate}"/>
        </Style>
