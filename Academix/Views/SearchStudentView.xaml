<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academix.Views"
                 xmlns:viewModels="clr-namespace:Academix.ViewModels"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="Academix.Views.SearchStudentView"
             xmlns:conv="clr-namespace:Academix.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1340">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type viewModels:AddStudentViewModel}">
            <local:AddStudentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ViewStudentViewModel}">
            <local:ViewStudentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ModifyStudentViewModel}">
            <local:ModifyStudentView/>
        </DataTemplate>
        <Style TargetType="GridViewColumnHeader"
           BasedOn="{StaticResource LightBlueGridViewColumnHeaderStyle}"/>
        <Style TargetType="Button"
           BasedOn="{StaticResource DeepBlueButton}"/>
        <Style x:Key="SearchInfoStack" TargetType="StackPanel">
            <Setter Property="FlowDirection"
                Value="RightToLeft"/>
            <Setter Property="Orientation"
                Value="Horizontal"/>
            <Setter Property="Margin"
                Value="0,10,0,10"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Template" 
                Value="{StaticResource ComboBoxControlTemplate}"/>
        </Style>

        <Style TargetType="Expander"
              BasedOn="{StaticResource LightBlueExpander}"/>
        <conv:NullToBoolConverter x:Key="NullToBoolConverter"/>
    </UserControl.Resources>

    <Grid>
        <ContentControl x:Name="MainView">
            <DockPanel Background="Transparent"
            LastChildFill="True"
                   Visibility="Visible">
                <Expander 
                Background="Transparent"
                BorderBrush="#FF615F5F"
                DockPanel.Dock="Top"
                Margin="0,0,0,10"
                FlowDirection="RightToLeft"
            >
                    <Expander.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                            FlowDirection="LeftToRight"
                            Height="30">
                                <iconPacks:PackIconMaterial Height="20"
                                Width="20"
                                Kind="FileSearch"
                                Foreground="White"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0"/>
                                <TextBlock Height="Auto"
                                Width="Auto"
                                FontSize="18"
                                VerticalAlignment="Center"
                                Foreground="White"
                                FontWeight="Bold"
                                Margin="10,0,0,0"><Run Text="Thông tin tìm kiếm"/></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </Expander.HeaderTemplate>
                    <StackPanel>
                        <Grid Background="White">
                            <Grid.Resources>
                                <Style TargetType="{x:Type TextBox}">
                                    <Setter Property="Width"
                                    Value="400"/>
                                    <Setter Property="Height" 
                                    Value="35"/>
                                    <Setter Property="FontSize"
                                    Value="25"/>
                                    <Setter Property="Foreground"
                                    Value="Black"/>
                                    <Setter Property="Background"
                                    Value="White"/>
                                    <Setter Property="BorderBrush"
                                    Value="{StaticResource GrayBorder}"/>
                                    <Setter Property="BorderThickness"
                                    Value="2"/>
                                </Style>

                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="FontSize"
                                    Value="20"/>
                                    <Setter Property="Foreground"
                                    Value="#FF615F5F"/>
                                    <Setter Property="VerticalAlignment"
                                    Value="Center"/>
                                    <Setter Property="Margin"
                                    Value="20,0,0,0"/>
                                </Style>

                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="Template"
                                    Value="{StaticResource ComboBoxControlTemplate}"/>
                                    <Setter Property="Height"
                                    Value="35"/>
                                    <Setter Property="Width"
                                    Value="400"/>
                                    <Setter Property="FlowDirection"
                                    Value="LeftToRight"/>
                                    <Setter Property="BorderThickness"
                                    Value="2"/>
                                </Style>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="23*"/>
                                <ColumnDefinition Width="712*"/>
                                <ColumnDefinition Width="735*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="2"
                            Orientation="Vertical"
                            Margin="40,0,0,0">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type StackPanel}"
                                    BasedOn="{StaticResource SearchInfoStack}"/>
                                </StackPanel.Resources>
                                <StackPanel>
                                    <ComboBox
                                        ItemsSource="{Binding GradeList}"
                                        SelectedItem="{Binding SelectedGrade, Mode=TwoWay}"/>
                                    <TextBlock><Run Text="Khối"/></TextBlock>
                                </StackPanel>
                                <StackPanel>
                                    <ComboBox
                                        ItemsSource="{Binding GenderList}"
                                        SelectedItem="{Binding SelectedGender, Mode=TwoWay}"/>
                                    <TextBlock><Run Text="Giới tính"/></TextBlock>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBlock><Run Text="Họ tên"/></TextBlock>
                                </StackPanel>
                                <StackPanel>
                                    <ComboBox
                                        ItemsSource="{Binding EthnicityList}"
                                        SelectedItem="{Binding SelectedEthnicity, Mode=TwoWay}"/>
                                    <TextBlock><Run Text="Dân tộc"/></TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            Margin="17,0,0,0">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type StackPanel}"
                                    BasedOn="{StaticResource SearchInfoStack}"/>
                                </StackPanel.Resources>
                                <StackPanel>
                                    <ComboBox
                                        ItemsSource="{Binding FilteredClassList}"
                                        SelectedItem="{Binding SelectedClass, Mode=TwoWay}"/>
                                    <TextBlock><Run Text="Lớp học"/></TextBlock>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox Text="{Binding StudentID, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBlock><Run Text="Mã học sinh"/></TextBlock>
                                </StackPanel>
                                <StackPanel>
                                    <ComboBox
                                        ItemsSource="{Binding StatusList}"
                                        SelectedItem="{Binding SelectedStatus, Mode=TwoWay}"/>
                                    <TextBlock><Run Text="Trạng thái"/></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <Border Background="White"
                        BorderThickness="0,1,0,0"
                        BorderBrush="#FF615F5F">
                            <StackPanel Orientation="Horizontal"
                            FlowDirection="RightToLeft">
                                <Button Command="{Binding SearchCommand}"                              
                                Margin="20,10,0,10"
                                >
                                    <StackPanel Orientation="Horizontal"
                                    FlowDirection="LeftToRight">
                                        <iconPacks:PackIconMaterial
                                        Height="15"
                                        Width="15"
                                        Kind="Magnify"
                                        Foreground="White"
                                        VerticalAlignment="Center"/>
                                        <TextBlock VerticalAlignment="Center"><Run Text="Tìm kiếm"/></TextBlock>
                                    </StackPanel>
                                </Button>
                                
                                <Button Command="{Binding CancelSearchCommand}"                              
                                Margin="20,10,0,10"
                                >
                                    <StackPanel Orientation="Horizontal"
                                    FlowDirection="LeftToRight">
                                        <iconPacks:PackIconMaterial
                                        Height="15"
                                        Width="15"
                                        Kind="CloseCircle"
                                        Foreground="White"
                                        VerticalAlignment="Center"/>
                                        <TextBlock VerticalAlignment="Center"><Run Text="Hủy tìm kiếm"/></TextBlock>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Expander>
                <StackPanel Orientation="Horizontal"
                FlowDirection="RightToLeft"
                DockPanel.Dock="Top"
                Margin="20,0,20,10">
                    <Button Command="{Binding DeleteCommand}"
                    Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                            <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="CloseCircle"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                            <TextBlock VerticalAlignment="Center"><Run Text="Xóa"/></TextBlock>
                        </StackPanel>


                    </Button>
                    <Button x:Name="AddButton"
                            Click="AddButton_Click"
                    Margin="0,0,5,0">
                        <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                            <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="PlusCircle"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                            <TextBlock VerticalAlignment="Center"><Run Text="Thêm mới"/></TextBlock>
                        </StackPanel>
                    </Button>
                    <Button 
                    Margin="0,0,5,0">
                        <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                            <TextBlock VerticalAlignment="Center"><Run Text="Nhập xuất"/></TextBlock>
                            <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="SwapVerticalBold"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <DataGrid ItemsSource="{Binding Students}" 
                          SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
                        AutoGenerateColumns="False"
                        Background="White" 
                        DockPanel.Dock="Top"
                        FontSize="20" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        HorizontalAlignment="Center">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="ViewMenuItem" Click="ViewMenuItem_Click">

                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Foreground="{StaticResource DeepBlueForeground}"><Run Text="Xem"/></TextBlock>
                                        <iconPacks:PackIconMaterial
                                                    Height="15"
                                                    Width="15"
                                                    Foreground="{StaticResource DeepBlueForeground}"
                                                    Kind="Eye"
                                                    VerticalAlignment="Center"
                                                    Margin="5,0,0,0"/>
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>

                            <MenuItem x:Name="ModifyMenuItem" Click="ModifyMenuItem_Click">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Foreground="{StaticResource DeepBlueForeground}"><Run Text="Sửa"/></TextBlock>
                                        <iconPacks:PackIconMaterial
                                                Height="15"
                                                Width="15"
                                                Foreground="{StaticResource DeepBlueForeground}"
                                                Kind="Pencil"
                                                VerticalAlignment="Center"
                                                Margin="5,0,0,0"/>
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>
                            <MenuItem>
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Foreground="{StaticResource DeepBlueForeground}"><Run Text="Xóa"/></TextBlock>
                                        <iconPacks:PackIconMaterial
                                                Height="15"
                                                Width="15"
                                                Foreground="{StaticResource DeepBlueForeground}"
                                                Kind="CloseCircle"
                                                VerticalAlignment="Center"
                                                Margin="5,0,0,0"/>
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>

                        </ContextMenu>
                    </DataGrid.ContextMenu>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT"
                                                    Binding="{Binding Index}"
                                                    Width="80">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                        BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridCheckBoxColumn Width="80" Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <DataGridCheckBoxColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                       BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridCheckBoxColumn.HeaderStyle>
                            <DataGridCheckBoxColumn.Header>
                                <CheckBox IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=DataGrid}, Mode=TwoWay}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>
                        <DataGridTextColumn Header="Mã học sinh"
                                                    Binding="{Binding ID}"
                                                    Width="180">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                        BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Họ tên"
                                                    Binding="{Binding Name}"
                                                    Width="280">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                        BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Giới tính"
                                                    Binding="{Binding Gender}"
                                                    Width="120">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                        BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Lớp"
                                                    Binding="{Binding ClassName}"
                                                    Width="100">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                        BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="TB HK I"
                                                    Binding="{Binding GPA1}"
                                                    Width="120">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                        BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="TB HK II"
                                                    Binding="{Binding GPA2}"
                                                    Width="120">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                        BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Trạng thái"
                                                    Binding="{Binding Status}"
                                                    Width="*">
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="{x:Type DataGridColumnHeader}"
                                        BasedOn="{StaticResource LightBlueHeader}"/>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>

                    </DataGrid.Columns>

                </DataGrid>

            </DockPanel>

        </ContentControl>

        <ContentControl x:Name="ExtendView" Visibility="Collapsed"/>

    </Grid>
</UserControl>
