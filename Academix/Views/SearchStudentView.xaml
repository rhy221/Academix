<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academix.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="Academix.Views.SearchStudentView"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1340">

    <UserControl.Resources>

        <Style TargetType="GridViewColumnHeader"
           BasedOn="{StaticResource LightBlueGridViewColumnHeaderStyle}"/>
        <Style TargetType="Button"
           BasedOn="{StaticResource DeepBlueButton}"/>
        <Style x:Key="SearchInfoStack" TargetType="StackPanel">
            <Setter Property="FlowDirection"
                Value="RightToLeft"/>
            <Setter Property="Orientation"
                Value="Horizontal"/>
            <Setter Property="Margin"
                Value="0,10,0,10"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Template" 
                Value="{StaticResource ComboBoxControlTemplate}"/>
        </Style>

        <Style TargetType="Expander"
              BasedOn="{StaticResource LightBlueExpander}"/>
    </UserControl.Resources>
    <DockPanel Background="Transparent"
            LastChildFill="True">
        <Expander 
                Background="Transparent"
                BorderBrush="#FF615F5F"
                DockPanel.Dock="Top"
                Margin="0,0,0,10"
                FlowDirection="RightToLeft"
            >
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                            FlowDirection="LeftToRight"
                            Height="30">
                        <iconPacks:PackIconMaterial Height="20"
                                Width="20"
                                Kind="FileSearch"
                                Foreground="White"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0"/>
                        <TextBlock Height="Auto"
                                Width="Auto"
                                FontSize="18"
                                VerticalAlignment="Center"
                                   Foreground="White"
                                   FontWeight="Bold"
                                Margin="10,0,0,0"><Run Text="Thông tin tìm kiếm"/></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <StackPanel>
                <Grid Background="White">
                    <Grid.Resources>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Width"
                                    Value="400"/>
                            <Setter Property="Height" 
                                    Value="35"/>
                            <Setter Property="FontSize"
                                    Value="25"/>
                            <Setter Property="Foreground"
                                    Value="Black"/>
                            <Setter Property="Background"
                                    Value="White"/>
                            <Setter Property="BorderBrush"
                                    Value="{StaticResource GrayBorder}"/>
                            <Setter Property="BorderThickness"
                                    Value="2"/>
                        </Style>

                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="FontSize"
                                    Value="20"/>
                            <Setter Property="Foreground"
                                    Value="#FF615F5F"/>
                            <Setter Property="VerticalAlignment"
                                    Value="Center"/>
                            <Setter Property="Margin"
                                    Value="20,0,0,0"/>
                        </Style>

                        <Style TargetType="{x:Type ComboBox}">
                            <Setter Property="Template"
                                    Value="{StaticResource ComboBoxControlTemplate}"/>
                            <Setter Property="Height"
                                    Value="35"/>
                            <Setter Property="Width"
                                    Value="400"/>
                            <Setter Property="FlowDirection"
                                    Value="LeftToRight"/>
                            <Setter Property="BorderThickness"
                                    Value="2"/>
                        </Style>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="712*"/>
                        <ColumnDefinition Width="735*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="2"
                            Orientation="Vertical"
                            Margin="40,0,0,0">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type StackPanel}"
                                    BasedOn="{StaticResource SearchInfoStack}"/>
                        </StackPanel.Resources>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Khối"/></TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Giới tính"/></TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <TextBox/>
                            <TextBlock><Run Text="Họ tên"/></TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Dân tộc"/></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            Margin="17,0,0,0">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type StackPanel}"
                                    BasedOn="{StaticResource SearchInfoStack}"/>
                        </StackPanel.Resources>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Lớp học"/></TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <TextBox/>
                            <TextBlock><Run Text="Mã học sinh"/></TextBlock>
                        </StackPanel>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Trạng thái"/></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Border Background="White"
                        BorderThickness="0,1,0,0"
                        BorderBrush="#FF615F5F">
                    <StackPanel Orientation="Horizontal"
                            FlowDirection="RightToLeft">

                        <Button                               
                                Margin="20,10,0,10"
                                >
                            <StackPanel Orientation="Horizontal"
                                    FlowDirection="LeftToRight">
                                <iconPacks:PackIconMaterial
                                        Height="15"
                                        Width="15"
                                        Kind="Magnify"
                                        Foreground="White"
                                        VerticalAlignment="Center"/>
                                <TextBlock VerticalAlignment="Center"><Run Text="Tìm kiếm"/></TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Expander>
        <StackPanel Orientation="Horizontal"
                FlowDirection="RightToLeft"
                DockPanel.Dock="Top"
                Margin="20,0,20,10">
            <Button 
                    Margin="0,0,10,0">
                <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                    <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="PlusCircleOutline"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                    <TextBlock VerticalAlignment="Center"><Run Text="Xóa"/></TextBlock>
                </StackPanel>


            </Button>
            <Button 
                    Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                    <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="PlusCircleOutline"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                    <TextBlock VerticalAlignment="Center"><Run Text="Thêm mới"/></TextBlock>
                </StackPanel>
            </Button>
            <Button 
                    Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                    <TextBlock VerticalAlignment="Center"><Run Text="Nhập xuất"/></TextBlock>
                    <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="SwapVerticalBold"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <ListView Background="White" 
                DockPanel.Dock="Top"
                FontSize="20" ScrollViewer.HorizontalScrollBarVisibility="Visible"
                  HorizontalAlignment="Center">

            <ListView.View>
                <GridView>
                    <GridViewColumn Width="100" 
                            Header="STT"/>
                    <GridViewColumn Header="CHeck"
                            Width="80"/>
                    <GridViewColumn Header="Mã học sinh"
                            Width="200"/>
                    <GridViewColumn Header="Họ tên"
                            Width="250"/>
                    <GridViewColumn Header="Ngày sinh"
                            Width="150"/>
                    <GridViewColumn Header="Giới tính"
                            Width="150"/>
                    <!--<GridViewColumn Header="Dân tộc"
                            Width="150"/>-->
                    <GridViewColumn Header="Tên lớp"
                            Width="150"/>
                    <GridViewColumn Header="Trạng thái"
                            Width="150"/>
                </GridView>
            </ListView.View>
            <ListViewItem/>
        </ListView>

    </DockPanel>


</UserControl>
