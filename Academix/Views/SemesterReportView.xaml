<UserControl x:Class="Academix.Views.SemesterReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academix.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel >
        <TextBlock DockPanel.Dock="Top"
            Background="{StaticResource LightBlueBackground}" 
            FontSize="25"
            Foreground="White"
            FontWeight="Bold"
            TextAlignment="Center"
            Margin="0,0,0,20"><Run Text="BÁO CÁO TỔNG HỌC KỲ"/></TextBlock>
        <UniformGrid DockPanel.Dock="Top"
            Columns="2"
            Margin="0,0,0,20">
            <UniformGrid.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontSize"
                        Value="20"/>
                    <Setter Property="Foreground"
                        Value="{StaticResource GrayForeground}"/>
                    <Setter Property="FontWeight"
                        Value="Bold"/>
                </Style>
            </UniformGrid.Resources>
          
            <TextBlock><Run Text="Năm học:"/></TextBlock>
            <TextBlock><Run Text="Học kỳ:"/></TextBlock>
        </UniformGrid>
        <DataGrid DockPanel.Dock="Top"
            Foreground="White"
            FontSize="20"
            FontWeight="Bold"
           >
            <DataGrid.Columns>
                <DataGridTextColumn Header="STT"
                    Width="100">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Lớp"
                    Width="300">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Sĩ số"
                    Width="100">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Số lượng đạt"
                    Width="230">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Tỉ lệ"
                    Width="*">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>

</UserControl>
