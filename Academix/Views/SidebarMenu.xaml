<UserControl x:Class="Academix.Views.SidebarMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Academix.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150">
    <UserControl.Resources>
        <Style TargetType="Expander">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock FontSize="15"
                                    FontFamily="Arial"
                                    Foreground="White"
                                    Text="{Binding Header, RelativeSource={RelativeSource AncestorType={x:Type Expander}}}"
                                    Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Expander}}}" 
                                    Margin="-30,0,0,0"
                                    FlowDirection="LeftToRight"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="Yellow"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <ComboBox Height="50" Width="150" Style="{StaticResource {x:Static ToolBar.ComboBoxStyleKey}}"></ComboBox>
        <Border Background="#FF0B3948" d:IsHidden="True"
               >
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="Margin" Value="0,10,0,10"/>
                    </Style>
                </StackPanel.Resources>
                <Grid Margin="0,0,0,22">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="11,7,0,0">
                        <Border Width="20" Height="20" 
                                 CornerRadius="30"
                                Background="White"
                                BorderThickness="0">

                            <Image Source="/Assets/AcademixIcon.png" 
                                    Width="18" 
                                    Height="18"
                                    Stretch="Uniform"/>
                        </Border>


                        <TextBlock
                                Foreground="White"
                                FontSize="20"
                                FontFamily="Arial"
                                Height="20"
                                Width="83" Margin="0,0,0,2"
                                ><Run Text="cademix"/></TextBlock>
                    </StackPanel>

                    <ToggleButton Grid.Column="1"
                                  Height="25"
                                  Width="25"
                        Background="AntiqueWhite"></ToggleButton>
                </Grid>
                <StackPanel>
                    <iconPacks:PackIconFontAwesome Kind="GraduationCapSolid"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Left"
                                                   Height="15"
                                                   Width="15"
                                                   Foreground="White" Margin="5,3,0,0" />
                    <Expander Header="Học sinh"
                          FontFamily="Arial"
                           
                              Width="117"
                              
                           >
                        <ListBox>
                            <ListBoxItem Content="eee"></ListBoxItem>
                            <ListBoxItem Content="eee"></ListBoxItem>

                            <ListBoxItem Content="eee"></ListBoxItem>

                        </ListBox>
                       
                    </Expander>
                </StackPanel>
                <StackPanel>
                    <iconPacks:PackIconMaterial Kind="AccountMultiple"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Height="15"
                        Width="15"
                        Foreground="White" Margin="5,3,0,0" />
                    <Expander Header="Lớp học"
                        FontFamily="Arial"
                         
                        Width="117"
                              
                           >
                        <ListBox>
                            <ListBoxItem Content="eee"/>
                            <ListBoxItem Content="eee"/>

                            <ListBoxItem Content="eee"/>

                        </ListBox>

                    </Expander>
                </StackPanel>
                <StackPanel>
                    <iconPacks:PackIconMaterial Kind="Magnify"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Height="15"
                        Width="15"
                        Foreground="White" Margin="5,3,0,0" />
                    <Expander Header="Tra cứu"
                        FontFamily="Arial"
                         
                        Width="117"
                              
                           >
                        <ListBox>
                            <ListBoxItem Content="eee"/>
                            <ListBoxItem Content="eee"/>

                            <ListBoxItem Content="eee"/>

                        </ListBox>

                    </Expander>
                </StackPanel>
                <StackPanel>
                    <iconPacks:PackIconMaterial Kind="ChartBar"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Height="15"
                        Width="15"
                        Foreground="White" Margin="5,3,0,0" />
                    <Expander Header="Báo cáo"
                        FontFamily="Arial"
                         
                        Width="117"
                              
                           >
                        <ListBox>
                            <ListBoxItem Content="eee"/>
                            <ListBoxItem Content="eee"/>

                            <ListBoxItem Content="eee"/>

                        </ListBox>

                    </Expander>
                </StackPanel>
                <StackPanel>
                    <iconPacks:PackIconMaterial Kind="Cog"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Height="15"
                        Width="15"
                        Foreground="White" Margin="5,3,0,0" />
                    <Expander Header="Cài đặt"
                        FontFamily="Arial"
                         
                        Width="117"
                              
                           >
                        <ListBox>
                            <ListBoxItem Content="eee"/>
                            <ListBoxItem Content="eee"/>

                            <ListBoxItem Content="eee"/>

                        </ListBox>

                    </Expander>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
