<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academix.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="Academix.Views.SubjectReportView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="SearchInfoStack" TargetType="StackPanel">
            <Setter Property="FlowDirection"
     Value="RightToLeft"/>
            <Setter Property="Orientation"
     Value="Horizontal"/>
            <Setter Property="Margin"
     Value="10,10,0,10"/>
        </Style>
        <Style TargetType="Button"
               BasedOn="{StaticResource DeepBlueButton}"/>
        <Style TargetType="Expander"
               BasedOn="{StaticResource LightBlueExpander}"/>
    </UserControl.Resources>
    <DockPanel>
        <Expander 
            DockPanel.Dock="Top"
            FlowDirection="RightToLeft"
            Margin="0,0,0,20">
            <Expander.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight"
                        Height="30">
                        <iconPacks:PackIconMaterial Height="20"
                            Width="20"
                            Kind="FileSearch"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Margin="10,0,0,0"/>
                        <TextBlock Height="Auto"
                            Width="Auto"
                            FontSize="20"
                            Foreground="White"
                            FontWeight="Bold"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"><Run Text="Thông tin báo cáo"/></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </Expander.HeaderTemplate>
            <StackPanel Background="White">
                <UniformGrid
                    Columns="2"
                    FlowDirection="LeftToRight">
                    <UniformGrid.Resources>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Width"
                                Value="200"/>
                            <Setter Property="Height" 
                                Value="35"/>
                            <Setter Property="FontSize"
                                Value="25"/>
                            <Setter Property="Foreground"
                                Value="Black"/>
                            <Setter Property="Background"
                                Value="White"/>
                            <Setter Property="BorderBrush"
                                Value="{StaticResource GrayBorder}"/>
                            <Setter Property="BorderThickness"
                                Value="2"/>
                        </Style>

                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="FontSize"
                                Value="20"/>
                            <Setter Property="Foreground"
                                Value="#FF615F5F"/>
                            <Setter Property="VerticalAlignment"
                                Value="Center"/>
                            <Setter Property="Margin"
                                Value="20,0,0,0"/>
                        </Style>

                        <Style TargetType="{x:Type ComboBox}">
                            <Setter Property="Template"
                                Value="{StaticResource ComboBoxControlTemplate}"/>
                            <Setter Property="Height"
                                Value="35"/>
                            <Setter Property="Width"
                                Value="250"/>
                            <Setter Property="FlowDirection"
                                Value="LeftToRight"/>
                            <Setter Property="BorderThickness"
                                Value="2"/>
                        </Style>
                    </UniformGrid.Resources>
                    <StackPanel
                        Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type StackPanel}"
                                BasedOn="{StaticResource SearchInfoStack}"/>
                        </StackPanel.Resources>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Học kỳ"/></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel
                        Orientation="Vertical">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type StackPanel}"
                                BasedOn="{StaticResource SearchInfoStack}"/>
                        </StackPanel.Resources>
                        <StackPanel>
                            <ComboBox/>
                            <TextBlock><Run Text="Môn học"/></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </UniformGrid>
                <Button HorizontalAlignment="Left"
                        Margin="10,0,0,20">
                    <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                        <iconPacks:PackIconMaterial
                            Kind="ChartBox"
                            Foreground="White"
                            Height="15"
                            Width="15"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                        <TextBlock VerticalAlignment="Center"><Run Text="Kết xuất"/></TextBlock>
                    </StackPanel>
                </Button>
                <Border
                    BorderThickness="0,1,0,0"
                    BorderBrush="#FF615F5F">
                    <StackPanel Orientation="Horizontal"
                        FlowDirection="RightToLeft"
                                Margin="0,10,0,10">
                        <StackPanel.Resources>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource DeepBlueButton}">
                                <Setter Property="Margin"
                                        Value="10,0,0,0"/>
                            </Style>
                        </StackPanel.Resources>

                        <Button>
                            <StackPanel Orientation="Horizontal"
                                FlowDirection="LeftToRight">
                                <iconPacks:PackIconMaterial
                                    Kind="FilePdfBox"
                                    Foreground="White"
                                    Height="15"
                                    Width="15"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center"><Run Text="Xuất PDF"/></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button>
                            <StackPanel Orientation="Horizontal"
                                FlowDirection="LeftToRight">
                                <iconPacks:PackIconMaterial
                                    Kind="FileExcel"
                                    Foreground="White"
                                    Height="15"
                                    Width="15"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0"/>
                                <TextBlock VerticalAlignment="Center"><Run Text="Xuất Excel"/></TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Expander>
        <TextBlock DockPanel.Dock="Top"
            Background="{StaticResource LightBlueBackground}" 
            FontSize="25"
            Foreground="White"
            FontWeight="Bold"
            TextAlignment="Center"
                   Margin="0,0,0,20"><Run Text="BÁO CÁO TỔNG KẾT MÔN"/></TextBlock>
        <UniformGrid DockPanel.Dock="Top"
            Columns="2"
                     Margin="0,0,0,20">
            <UniformGrid.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontSize"
                        Value="20"/>
                    <Setter Property="Foreground"
                        Value="{StaticResource GrayForeground}"/>
                    <Setter Property="FontWeight"
                        Value="Bold"/>
                </Style>
            </UniformGrid.Resources>
            <TextBlock><Run Text="Môn:"/></TextBlock>
            <TextBlock><Run Text="Năm học:"/></TextBlock>
            <TextBlock><Run Text="Học kỳ:"/></TextBlock>
        </UniformGrid>
        <DataGrid DockPanel.Dock="Top"
                  Foreground="White"
                  FontSize="20"
                  FontWeight="Bold">
            <DataGrid.Columns>
                <DataGridTextColumn Header="STT"
                                    Width="100">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                               BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Lớp"
                    Width="300">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Sĩ số"
                    Width="100">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Số lượng đạt"
                    Width="230">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Tỉ lệ"
                    Width="*">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
