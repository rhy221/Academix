<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academix.Views"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             x:Class="Academix.Views.SubjectSystemView"
             mc:Ignorable="d" 
             d:DesignHeight="770" d:DesignWidth="1380">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top"
              Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Left"
                        Margin="20,0,0,0">
                <StackPanel Orientation="Horizontal"
                FlowDirection="RightToLeft">
                    <ComboBox Height="30"
                    Width="120"
                    FlowDirection="LeftToRight"
                    VerticalAlignment="Center" 
                    Margin="10,0,0,0"/>
                    <TextBlock FontSize="20"
                    Height="30"
                    Foreground="{StaticResource GrayForeground}"
                    FlowDirection="LeftToRight"
                    FontWeight="Bold"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0"><Run Text="Khối"/></TextBlock>
                </StackPanel>

            </StackPanel>
            <StackPanel 
            Orientation="Horizontal"
            FlowDirection="RightToLeft"
                HorizontalAlignment="Right">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource DeepBlueButton}">
                        <Setter Property="Margin"
                 Value="5,0,5,0"/>
                    </Style>
                </StackPanel.Resources>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock><Run Text="Lưu"/></TextBlock>
                        <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="ContentSave"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock><Run Text="Khôi phục"/></TextBlock>
                        <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="Restore"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel Orientation="Horizontal"
                        FlowDirection="LeftToRight">
                        <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="PlusCircleOutline"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Margin="0,0,5,0"/>
                        <TextBlock VerticalAlignment="Center"><Run Text="Thêm mới"/></TextBlock>
                    </StackPanel>
                </Button>
                <Button>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock><Run Text="Nhập/xuất"/></TextBlock>
                        <iconPacks:PackIconMaterial
                            Height="15"
                            Width="15"
                            Kind="SwapVerticalBold"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <DataGrid DockPanel.Dock="Top" HorizontalAlignment="Center">
            <DataGrid.Resources>
                <Style x:Key="CustomHeader" TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background"
                Value="{StaticResource LightBlueBackground}"/>
                    <Setter Property="BorderThickness"
            Value="1"/>
                    <Setter Property="HorizontalContentAlignment"
            Value="Center"/>
                    <Setter Property="VerticalContentAlignment"
                Value="Center"/>
                    <Setter Property="Foreground"
                            Value="White"/>
                    <Setter Property="FontWeight"
                            Value="Bold"/>
                    <Setter Property="FontSize"
                            Value="15"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="STT"
                                    Width="100">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource CustomHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Mã môn học"
                    Width="200">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource CustomHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Tên môn học"
                    Width="200">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource CustomHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Số con điểm miệng"
                    Width="180">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource CustomHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Số con điểm 15P"
                    Width="180">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource CustomHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Số con điểm 1 tiết"
                    Width="180">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource CustomHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
