<UserControl x:Class="Academix.Views.ViewClassView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academix.Views"
                          xmlns:viewModels="clr-namespace:Academix.ViewModels"
                                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             mc:Ignorable="d" 
              d:DesignHeight="720" d:DesignWidth="1340">
    
    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontSize"
Value="20"/>
            <Setter Property="Foreground"
Value="#FF615F5F"/>
            <Setter Property="VerticalAlignment"
Value="Center"/>
            <Setter Property="Padding"
Value="0,0,20,0"/>
            <Setter Property="FontWeight"
                   Value="Bold"/>
            <Setter Property="FlowDirection"
                   Value="LeftToRight"/>
        </Style>
    </UserControl.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top"
                    FlowDirection="RightToLeft"
                    Orientation="Horizontal"
                    Margin="0,0,0,20"
                   >
            <StackPanel.Resources>
                <Style TargetType="Button"
                       BasedOn="{StaticResource DeepBlueButton}"/>
            </StackPanel.Resources>
            <Button Command="{Binding BackCommand}">
                <StackPanel Orientation="Horizontal"
                    FlowDirection="LeftToRight">
                    <iconPacks:PackIconMaterial
                        Height="15"
                        Width="15"
                        Kind="ArrowLeft"
                        Foreground="White"
                        VerticalAlignment="Center"
                        Margin="0,0,5,0"/>
                    <TextBlock VerticalAlignment="Center"
                        Foreground="White"
                        Margin="0,0,0,0"><Run Text="Quay lại"/></TextBlock>
                </StackPanel>
            </Button>

        </StackPanel>
        <TextBlock DockPanel.Dock="Top"
            Background="{StaticResource LightBlueBackground}" 
            FontSize="20"
            Foreground="White"
            FontWeight="Bold"
            Padding="10"><Run Text="Thông tin lớp"/></TextBlock>
        <UniformGrid
            DockPanel.Dock="Top"
            Columns="2"
            Background="White"
            Margin="0,0,0,20">
            <UniformGrid.Resources>
                <Style TargetType="StackPanel">
                    <Setter Property="FlowDirection"
                            Value="RightToLeft"/>
                    <Setter Property="Margin"
                            Value="0,0,0,20"/>
                    <Setter Property="Orientation"
                            Value="Horizontal"/>
                </Style>

                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Width"
                            Value="450"/>
                    <Setter Property="Height"
                            Value="35"/>
                    <Setter Property="FontSize"
         Value="20"/>
                    <Setter Property="Foreground"
         Value="#FF615F5F"/>
                    <Setter Property="VerticalAlignment"
         Value="Center"/>
                    <Setter Property="Margin"
                            Value="20,0,0,0"/>
                    <Setter Property="FlowDirection"
                            Value="LeftToRight"/>
                </Style>


            </UniformGrid.Resources>
            <StackPanel Margin="0,20,0,20">
                <TextBlock/>
                <Label Content="Lớp:"/>
            </StackPanel>
            <StackPanel Margin="0,20,0,20">
                <TextBlock/>
                <Label Content="Năm học:"/>
            </StackPanel>
            <StackPanel Margin="0,0,0,20">
                <TextBlock/>
                <Label Content="Sĩ số:"/>
            </StackPanel>
            <StackPanel Margin="0,0,0,20">
                <TextBlock/>
                <Label Content="GVCN:"/>
            </StackPanel>
        </UniformGrid>

        <Label DockPanel.Dock="Top" 
               Content="Danh sách học sinh"
               Margin="20,0,0,20"/>
        <DataGrid Background="White" 
            DockPanel.Dock="Top"
            FontSize="20" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  HorizontalAlignment="Center">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem>
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Foreground="{StaticResource DeepBlueForeground}"><Run Text="Xem"/></TextBlock>
                                <iconPacks:PackIconMaterial
                                    Height="15"
                                    Width="15"
                                    Foreground="{StaticResource DeepBlueForeground}"
                                    Kind="Eye"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem>
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Foreground="{StaticResource DeepBlueForeground}"><Run Text="Sửa"/></TextBlock>
                                <iconPacks:PackIconMaterial
                                    Height="15"
                                    Width="15"
                                    Foreground="{StaticResource DeepBlueForeground}"
                                    Kind="Pencil"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>
                    <MenuItem>
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Foreground="{StaticResource DeepBlueForeground}"><Run Text="Xóa"/></TextBlock>
                                <iconPacks:PackIconMaterial
                                    Height="15"
                                    Width="15"
                                    Foreground="{StaticResource DeepBlueForeground}"
                                    Kind="CloseCircle"
                                    VerticalAlignment="Center"
                                    Margin="5,0,0,0"/>
                            </StackPanel>
                        </MenuItem.Header>
                    </MenuItem>

                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTextColumn Header="STT"
                    Width="100">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Mã học sinh"
                    Width="200">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Họ tên"
                    Width="250">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Giới tính"
                    Width="150">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Ngày sinh"
                    Width="200">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Trạng thái"
                    Width="150">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Địa chỉ"
                    Width="*">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}"
                            BasedOn="{StaticResource LightBlueHeader}"/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>

            </DataGrid.Columns>

        </DataGrid>
    </DockPanel>
</UserControl>
